<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4dd0e1">

    <!--카카오톡 로그인 버튼-->
    <RelativeLayout
        android:id="@+id/kakao_login_Relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop = "124dp">

        <ImageButton
            android:id="@+id/kakao_login_btn"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/kakao_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#b3000000"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="카카오톡으로 시작" />
    </RelativeLayout>

    <!--페이스북 로그인 버튼-->
    <RelativeLayout
        android:id="@+id/facebook_login_relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop = "14dp"
        android:layout_below="@id/kakao_login_Relative"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:id="@+id/facebook_login_btn"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/facebook_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#b3000000"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="페이스북으로 시작" />


    </RelativeLayout>

</RelativeLayout>